{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md", "CLAUDE.md"],
  "plugin": [
    "@franlol/opencode-md-table-formatter@latest",
    "@zenobius/opencode-skillful@latest",
    "@spoons-and-mirrors/subtask2@latest",
    "@ramarivera/opencode-model-announcer@latest",
    "opencode-pty@latest",
    "opencode-antigravity-auth@latest",
    "opencode-optimal-model-temps@latest",
    "opencode-gemini-auth@latest",
    "opencode-anthropic-auth@latest",
    "opencode-copilot-auth@latest",
    "opencode-cursor-auth@latest",
    "opencode-ignore@latest",
    "opencode-agent-skills@latest",
    "opencode-agent-memory@latest",
    "@zenobius/opencode-background@latest",
    "oh-my-opencode-slim@latest"
  ],
  "agent": {
    "explore": {
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": {
          "*": "deny",
          "ls *": "allow",
          "tree *": "allow",
          "cat *": "allow",
          "head *": "allow",
          "tail *": "allow",
          "grep *": "allow",
          "rg *": "allow",
          "find *": "allow",
          "git *": "allow"
        }
      }
    },
    "general": {
      "disable": false
    },
    "researcher": {
      "permission": {
        "context7_*": "allow",
        "exa_*": "allow",
        "gh_grep_*": "allow",
        "webfetch": "allow",
        "write": "deny",
        "edit": "deny",
        "bash": {
          "*": "deny",
          "gh *": "allow",
          "npm view*": "allow",
          "pip show*": "allow",
          "man *": "allow",
          "jq *": "allow",
          "grep *": "allow",
          "rg *": "allow"
        }
      }
    },
    "scribe": {
      "permission": {
        "bash": {
          "*": "deny"
        },
        "edit": "allow",
        "glob": "allow",
        "read": "allow",
        "write": "allow"
      }
    },
    "coder": {
      "permission": {
        "context7_*": "deny",
        "exa_*": "deny",
        "gh_grep_*": "deny",
        "read": "allow",
        "write": "allow",
        "edit": "allow",
        "glob": "allow",
        "grep": "allow",
        "bash": "allow"
      }
    },
    "reviewer": {
      "temperature": 0.2,
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": {
          "*": "deny",
          "git diff*": "allow",
          "git log*": "allow",
          "git show*": "allow",
          "git blame*": "allow",
          "rg *": "allow"
        },
        "plan_read": "allow",
        "delegation_read": "allow",
        "delegation_list": "allow"
      }
    },
    "plan": {
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": {
          "*": "deny"
        },
        "task": "allow",
        "worktree_*": "allow"
      }
    },
    "build": {
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": {
          "*": "deny"
        },
        "task": "allow",
        "worktree_*": "allow"
      }
    }
  },
  "mcp": {
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer 020288db3e534c428e5d3b11b9302fcf.Fd49ls8nfFNoxc4F"
      },
      "enabled": true
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer 020288db3e534c428e5d3b11b9302fcf.Fd49ls8nfFNoxc4F"
      },
      "enabled": true
    },
    "MCP_DOCKER": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    }
  },
  "provider": {
    "zai-coding-plan": {
      "options": {
        "apiKey": "$Z_AI_API_KEY"
      }
    },
    "cursor": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cursor Agent",
      "options": {
        "baseURL": "http://127.0.0.1:32123/v1"
      },
      "models": {
        "auto": {
          "name": "Cursor Auto"
        },
        "gpt-5": {
          "name": "GPT-5 (→ gpt-5.2)"
        },
        "gpt-5.2": {
          "name": "GPT-5.2"
        },
        "gpt-5.1": {
          "name": "GPT-5.1"
        },
        "gpt-5.1-codex": {
          "name": "GPT-5.1 Codex"
        },
        "opus-4.6": {
          "name": "Claude Opus 4.6"
        },
        "opus-4.5": {
          "name": "Claude Opus 4.5"
        },
        "sonnet-4": {
          "name": "Claude Sonnet 4 (→ 4.5)"
        },
        "sonnet-4.5": {
          "name": "Claude Sonnet 4.5"
        },
        "sonnet-4.5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking"
        }
      }
    }
  },
  "model": "zai-coding-plan/glm-4.7",
  "small_model": "zai-coding-plan/glm-4.5-air",
  "permission": {
    "bash": "allow",
    "task": "deny",
    "context7_*": "allow",
    "exa_*": "allow",
    "gh_grep_*": "allow",
    "kagi_*": "allow",
    "webfetch": "allow",
    "worktree_*": "allow",
    "lsp": "allow",
    "skill": "allow",
    "question": "allow"
  }
}
