{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit",
    "source.fixAll.oxc": "explicit"
  },
  "biome.suggestInstallingGlobally": false,
  "oxc.enable": true,
  "oxc.enable.oxfmt": true,
  "oxc.enable.oxlint": true,
  "oxc.fixKind": "safe_fix_or_suggestion",
  "oxc.lint.run": "onSave",
  "oxc.typeAware": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "emmet.showExpandedAbbreviation": "never",
  "json.schemaDownload.trustedDomains": {
    "https://schemastore.azurewebsites.net/": true,
    "https://raw.githubusercontent.com/": true,
    "https://www.schemastore.org/": true,
    "https://json.schemastore.org/": true,
    "https://json-schema.org/": true,
    "https://biomejs.dev": true
  },
  "[scss]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "chat.agent.codeBlockProgress": false,
  "chat.agent.thinkingStyle": "collapsedPreview",
  "chat.allowAnonymousAccess": true,
  "chat.alternativeToolAction.enabled": true,
  "chat.customAgentInSubagent.enabled": true,
  "chat.editor.fontFamily": "JetBrains Mono",
  "chat.editor.fontSize": 13,
  "chat.experimental.useSkillAdherencePrompt": true,
  "chat.fontFamily": "JetBrains Mono",
  "chat.includeReferencedInstructions": true,
  "chat.mcp.assisted.nuget.enabled": true,
  "chat.mcp.discovery.enabled": {
    "cursor-global": true,
    "cursor-workspace": true,
    "claude-desktop": true
  },
  "chat.mcp.gallery.enabled": true,
  "chat.tools.terminal.autoReplyToPrompts": true,
  "chat.unifiedAgentsBar.enabled": true,
  "chat.useClaudeHooks": true,
  "inlineChat.enableV2": true,
  "inlineChat.notebookAgent": true,
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.alternateGeminiModelFPrompt.enabled": true,
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "github.copilot.chat.anthropic.contextEditing.enabled": true,
  "github.copilot.chat.anthropic.tools.websearch.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.completionsFetcher": "node-fetch",
  "github.copilot.chat.copilotMemory.enabled": true,
  "github.copilot.chat.githubMcpServer.enabled": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.includeDocumentation": true,
  "github.copilot.chat.nesFetcher": "node-fetch",
  "github.copilot.chat.newWorkspace.useContext7": true,
  "github.copilot.chat.notebook.enhancedNextEditSuggestions.enabled": true,
  "github.copilot.chat.notebook.followCellExecution.enabled": true,
  "github.copilot.chat.responsesApiReasoningEffort": "medium",
  "github.copilot.chat.switchAgent.enabled": true,
  "github.copilot.nextEditSuggestions.extendedRange": true,
  "claudeCode.allowDangerouslySkipPermissions": true,
  "claudeCode.initialPermissionMode": "acceptEdits",
  "claudeCode.useCtrlEnterToSend": true,
  "claudeCode.hideOnboarding": true,
  "github.copilot.chat.claudeAgent.allowDangerouslySkipPermissions": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.blame.ignoreWhitespace": true,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.ignoreLegacyWarning": true,
  "npm.packageManager": "bun",
  "npm.runSilent": true,
  "npm.scriptRunner": "bun"
}
