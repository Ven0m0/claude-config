{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "true",
    "USE_BUILTIN_RIPGREP": "false",
    "DISABLE_PROMPT_CACHING": "0",
    "DISABLE_TELEMETRY": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "ENABLE_LSP_TOOL": "true",
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "63999",
    "MAX_MCP_OUTPUT_TOKENS": "10000",
    "MAX_THINKING_TOKENS": "31999",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "BASH_MAX_OUTPUT_LENGTH": "50000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "DISABLE_BUG_COMMAND": "true",
    "FORCE_AUTOUPDATE_PLUGINS": "true",
    "DISABLE_AUTOUPDATER": "true",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4-5-20251101",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-4-5-20251101",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-sonnet-4-5-20250929",
    "CLAUDE_CODE_SUBAGENT_MODEL": "claude-haiku-4-5-20251101",
    "ANTHROPIC_MODEL": "opusplan",
    "GITHUB_PERSONAL_ACCESS_TOKEN": "",
    "PYTHONPATH": "."
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(python:*)",
      "BashOutput",
      "Edit",
      "Glob",
      "Grep",
      "NotebookEdit",
      "Read",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write",
      "Skill",
      "SlashCommand",
      "KillShell",
      "Task",
      "WebSearch",
      "WebFetch(domain:*)",
      "mcp__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(mkfs:*)",
      "Bash(git reset --hard:*)",
      "Bash(git restore:*)",
      "Bash(gh auth logout:*)",
      "Bash(chown -R:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opusplan",
  "outputStyle": "default",
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "hooks": {},
  "customInstructions": "Follow the project's CLAUDE.md guidelines. Use concurrent execution for all operations.",
  "statusLine": {
    "type": "command",
    "command": "node \"$HOME/.claude/hooks/statusline.js\""
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "sc@superclaude": false,
    "prompt-optimizer@daymade-skills": true,
    "claude-code-tools@claudex": true,
    "claude-tools@claude-settings": false,
    "general-dev@claude-settings": true,
    "ultralytics-dev@claude-settings": true,
    "claude-md-progressive-disclosurer@daymade-skills": true,
    "docs-cleaner@daymade-skills": true,
    "skill-reviewer@daymade-skills": true,
    "json-to-toon@dotfiles-plugins": true,
    "prompt-improver@severity1-marketplace": true,
    "optimize-claude-md@lifegenie-marketplace": true,
    "conserve@claude-night-market": true,
    "github@claude-plugins-official": true,
    "vscode-langservers@claude-code-lsps": true,
    "markdown-optimizer@lifegenie-marketplace": true,
    "basedpyright@claude-code-lsps": true,
    "vtsls@claude-code-lsps": true,
    "rust-analyzer@claude-code-lsps": true,
    "bash-language-server@claude-code-lsps": true,
    "yaml-language-server@claude-code-lsps": true,
    "github-dev@claude-settings": true,
    "plugin-dev@claude-settings": true,
    "fact-checker@daymade-skills": true,
    "thinking-partner@lifegenie-marketplace": true,
    "block-dotfiles@wombat9000-marketplace": true,
    "config-wizard@wombat9000-marketplace": true,
    "dependency-blocker@wombat9000-marketplace": true
  }
}
