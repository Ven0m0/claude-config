{
  "mcpServers": {
    "github-mcp-server": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "tools": ["*"],
      "headers": {
        "X-MCP-Toolsets": "default,actions,web_search,code_security,copilot,dependabot,git,secret_protection,security_advisories,stargazers,copilot,github_support_docs_search,labels,gists",
        "X-MCP-Insiders": "true"
        "Authorization": "Bearer ${input:github_mcp_pat}"
      }
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking@latest"],
      "tools": ["*"]
    },
    "exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,web_search_advanced_exa,get_code_context_exa,crawling_exa,company_research_exa,people_search_exa,deep_researcher_start,deep_researcher_check",
      "tools": ["*"]
      "headers": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      }
    },
    "ref-tools": {
      "type": "http",
      "url": "https://api.ref.tools/mcp",
      "tools": ["*"]
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "tools": ["*"],
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "ast-grep": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@notprolands/ast-grep-mcp@latest"],
      "tools": ["*"]
    },
    "octocode": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "octocode-mcp@latest"],
      "tools": ["*"]
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "fast-filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "fast-filesystem-mcp@latest"],
      "tools": ["*"]
      "env": {
        "MCP_SILENT_ERRORS": "true"
      }
    }
  }
}
