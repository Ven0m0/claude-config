{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/format.sh\" \"$FILE\"",
            "description": "Auto-format code after editing"
          }
        ]
      }
    ]
  }
}
